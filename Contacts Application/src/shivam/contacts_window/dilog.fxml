<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>


<DialogPane prefHeight="300" prefWidth="500" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shivam.contacts_window.DialogController">
    <headerText>
        Use this dialog to add contact !
    </headerText>

    <content>
        <GridPane alignment="CENTER" hgap="10" vgap="20">
            <Label text="Enter First Name : " />

            <TextField fx:id="fname" prefHeight="25.0" prefWidth="359.0" GridPane.columnIndex="1" GridPane.columnSpan="4" />

            <Label text="Enter Last Name : " GridPane.rowIndex="1" />

            <TextField fx:id="lname" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="1" />

            <Label text="Enter Mobile No : " GridPane.rowIndex="2" />

            <TextField fx:id="mno" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="2" />

            <Label text="Enter Email : " GridPane.rowIndex="3" />

            <TextField fx:id="email" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="3" />

        </GridPane>
    </content>


</DialogPane>
